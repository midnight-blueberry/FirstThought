{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    // Enable resolution of modules using the "@" prefix
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@constants/*": ["src/constants/*"],
      "@assets/*": ["assets/*"],
      "@hooks/*": ["src/hooks/*"],
      "@settings/*": ["src/settings/*"],
      "@theme/*": ["src/theme/*"],
      "@storage/*": ["src/storage/*"]
    },
    // Allow default React imports and JSX in TypeScript files
    "esModuleInterop": true,
    "jsx": "react-native"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "scripts/__tests__"
  ]
}
