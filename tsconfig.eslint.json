{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": [
    "app/**/*",
    "src/**/*",
    "config/**/*",
    "tests/**/*",
    "eslint.config.mjs",
    "jest.config.js",
    "babel.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    ".expo",
    "vendor",
    "ChatGPT"
  ]
}
